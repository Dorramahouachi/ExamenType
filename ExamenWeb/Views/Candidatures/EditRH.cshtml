@model Domaine.Candidature

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
}
<div class="container">
    <br />

    &nbsp;
    &nbsp;


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Modifier</h4>
            <br />
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.candidatureId)


            <div class="form-group">
                <div class="col-md-10">

                    @Html.HiddenFor(model => model.candidatureDate)
                    @Html.ValidationMessageFor(model => model.candidatureDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.etat, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EnumDropDownListFor(model => model.etat, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.etat, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn ticker-btn" />
                </div>
            </div>
        </div>
    }
    <br />
    <p>
        &nbsp; <a class="btn ticker-btn" @Html.ActionLink("Annuler", "Index")></a>

    </p>
    <br />
    <br />
    <br />
    <br />
    <br />
</div>