@model IEnumerable<Domaine.Candidature>

@{
    ViewBag.Title = "CandidatCandidatures";
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
}


<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    Jobs Listing
                </h1>
                <p class="text-white link-nav"><a href="index.html">Home </a>  <span class="lnr lnr-arrow-right"></span>  <a href="category.html"> Job category</a></p>
            </div>
        </div>
    </div>
</section>
<div class="container">
    <br />

    &nbsp;
    &nbsp;

    <h2>Mes Candidatures</h2>
    &nbsp;
    <br />
    <br />
    <br />
    <table class="table">
        <tr>

            <th>
                @Html.DisplayName("Date depôt")
            </th>
            <th>
                @Html.DisplayName("Etat")
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.candidatureDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.etat)
                </td>
                <td>


                    <a class="btn ticker-btn" @Html.ActionLink("Details", "Details", new { id = item.candidatureId })></a>


                    @if (item.etat.ToString() == "Quizz")
                    {

                        <a class="btn ticker-btn" @Html.ActionLink("Quizz", "IndexQuizz", new { id = item.candidatureId })>

                        </a>
                    }
                    @if (item.score > 0 || (item.etat.ToString() == "accepted"))
                    {

                        <a class="btn ticker-btn" @Html.ActionLink("Entretien", "IndexCalendrier", new { id = item.candidatureId })></a>
                    }

                </td>
            </tr>
        }
    </table>

    <br />
    <br />
    <br />
    <br />
    <br />
</div>

