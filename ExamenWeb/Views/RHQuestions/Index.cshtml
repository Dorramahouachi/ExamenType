@model IEnumerable<Domaine.Question>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
}

<body>
  
    <div class="container">
        <br />
        &nbsp;
        &nbsp;
        <h2>Questions Quizz </h2>
        &nbsp;
        <br />

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Question ")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>

                    <td>
                        &nbsp;
                        &nbsp;
                        &nbsp;
                        &nbsp;
                        <a class="btn ticker-btn" @Html.ActionLink("Modifier", "Edit", new { id = item.QuestionID })>
                            &nbsp;
                        </a>
                        &nbsp;
                        &nbsp;
                        &nbsp;
                        &nbsp;
                        <a class="btn ticker-btn" @Html.ActionLink("Effacer", "Delete", new { id = item.QuestionID })>
                            &nbsp;
                        </a>
                        &nbsp;
                        &nbsp;
                        &nbsp;
                        &nbsp;
                        <a class="btn ticker-btn" @Html.ActionLink("Nouvelle Reponse", "CreateAnswer", new { id = item.QuestionID })>
                            &nbsp;
                        </a>

                    </td>
                </tr>
            }

        </table>
        <br />
        <br />
        <br />
        <p>
            <a class="btn ticker-btn" @Html.ActionLink("Nouvelle Question", "Create")></a>

        </p>
        <p>
            <a class="btn ticker-btn" @Html.ActionLink("Afficher Listes des reponses", "IndexA")></a>

        </p>

        <br />
        <br />
        <br />
    </div>
</body>


