@model IEnumerable<Domaine.Answer>

@{
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
}


<div class="container">
    <br />
    &nbsp;
    &nbsp;
    <h2>Reponses</h2>
    &nbsp;
    <br />
    <br />
    <br />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Reponse")
            </th>

            <th>
                @Html.DisplayName("Correct")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Correct)
                </td>
                <td>
                    &nbsp;
                    <a class="btn ticker-btn" @Html.ActionLink("Edit", "Edit", new { id = item.AnswerID })></a>
                    &nbsp;
                    <a class="btn ticker-btn" @Html.ActionLink("Delete", "Delete", new { id = item.AnswerID })></a>

                </td>
            </tr>
        }

    </table>
    <p>
        <a class="btn ticker-btn" @Html.ActionLink("Annuler", "IndexA")></a>
    </p>
    <br />
    <br />
    <br />
    <br />
</div>

