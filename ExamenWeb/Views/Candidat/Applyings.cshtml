    <Container>
        <h2>Applyings</h2>

        <table class="table">
            <tr>
                <th>
                    offerId
                </th>
                <th>
                    titleOffer
                </th>
                <th>
                    location
                </th>
                <th>
                    durationOffer
                </th>
                <th>
                    salary $
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.offerId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.titleOffer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.durationOffer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.salary)K
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteCandidature", new { id = item.offerId })
                    </td>
                </tr>
            }

        </table>
